<resources>

    <style name="SmallgosTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:buttonStyle">@style/SmallgosButton</item>
        <item name="buttonStyle">@style/SmallgosButton</item>
    </style>
    
    <style name="SmallgosButton" parent="android:Widget.Material.Button">
        <item name="android:textColor">@color/white_100</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SmallgosTextTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:textColor">@color/black_100</item>
    </style>

    <style name="SmallgosTextSubtitle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:textColor">@color/black_100</item>
    </style>

    <style name="SmallgosTextBody" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/black_100</item>
    </style>

</resources>
