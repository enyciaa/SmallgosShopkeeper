<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                app:titleTextColor="@color/white_100"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/grid_16"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:weightSum="1"
                >

                <ImageView
                    android:id="@+id/itemPicture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/grid_16"
                    android:src="@drawable/ic_placeholder"
                    />

                <EditText
                    android:id="@+id/itemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/grid_24"
                    android:layout_marginRight="@dimen/grid_24"
                    android:layout_marginBottom="@dimen/grid_8"
                    android:gravity="center_horizontal"
                    android:hint="@string/item_name_hint"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    />

                <EditText
                    android:id="@+id/itemPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/grid_24"
                    android:layout_marginRight="@dimen/grid_24"
                    android:layout_marginBottom="@dimen/grid_8"
                    android:gravity="center_horizontal"
                    android:hint="@string/item_name_price"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    />

                <EditText
                    android:id="@+id/itemProductId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/grid_24"
                    android:layout_marginRight="@dimen/grid_24"
                    android:layout_marginBottom="@dimen/grid_8"
                    android:gravity="center_horizontal"
                    android:hint="@string/item_product_id_hint"
                    android:imeOptions="actionNext"
                    android:inputType="textCapCharacters"
                    android:singleLine="true"
                    />

                <EditText
                    android:id="@+id/itemQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/grid_24"
                    android:layout_marginRight="@dimen/grid_24"
                    android:layout_marginBottom="@dimen/grid_16"
                    android:gravity="center_horizontal"
                    android:hint="@string/item_name_quantity"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:singleLine="true"
                    />

                <Button
                    android:id="@+id/itemAddButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/inventory_item_add_button"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>
